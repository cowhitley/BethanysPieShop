@page "/employeeoverview"

<h1>Employee Overview</h1>

<table class="table table-light">
    <thead class="table-primary">
    <tr>
        <th></th>
        <th>Employee ID</th>
        <th>First name</th>
        <th>Last name</th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var employee in Employees)
    {
        <tr>
            <td><img src="@($"https://bethanyspieshophrmstore.blob.core.windows.net/headshots/{employee.EmployeeId}.jpg")" alt="Employee picture" width="50" height="50" class="rounded-circle"/></td>
            <td>@employee.EmployeeId</td>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>
                <a href="@($"employeedetail/{employee.EmployeeId}")" class="btn btn-primary">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
